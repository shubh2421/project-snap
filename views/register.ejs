<div class="login-box">
  <img src="/css/logo_0.36571100 1592896939.png" alt="show" class="avatar" />
  <%- include ("./partials/messages"); %>
   <form class="form " id="createAccount" action="/users/register" method="POST">
    <div class="form__message form__message--error"></div>
    <div class="textbox">
      <i class="fa fa-user" aria-hidden="true"></i>
      <input
        type="name"
        id="name"
        autofocus
        placeholder="Name"
        class="form__input"
        name="name"
        value="<%= typeof name != 'undefined' ? name : '' %>"
      />
      <div class="form__input-error-message"></div>
    </div>

    <div class="textbox">
      <i class="fa fa-user" aria-hidden="true"></i>
      <input
        type="email"
        id="email"
        placeholder="Email"
        class="form__input"
        name="email"
        value="<%= typeof email != 'undefined' ? email : '' %>"
      />
      <div class="form__input-error-message"></div>
    </div>

    <div class="textbox">
      <i class="fa fa-lock" aria-hidden="true"></i>
      <input
        type="password"
        id="password"
        placeholder="Create Password"
        class="form__input"
        name="password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
      />
      <div class="form__input-error-message"></div>
    </div>

    <div class="textbox">
      <i class="fa fa-lock" aria-hidden="true"></i>
      <input
        type="password"
        id="password2"
        name="password2"
        placeholder="Confirm Password"
        class="form__input"
        
        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
      />
      <div class="form__input-error-message"></div>
    </div>

    <div class="textbox">
      <i class="fa fa-user" aria-hidden="true"></i>
      <input
        type="tel"
        maxlength="10"
        
        id="phonenumber"
        placeholder="Phone Number"
        class="form__input"
        name="phonenumber"
        value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
      />
      <div class="form__input-error-message"></div>
    </div>

    <p class="form__text">
      <a id="linklogin" href="/users/login" class="form__link"
        >Already have an account ?</a
      >
    </p>

    <button class="btn" type="submit">
      <b>Sign-Up</b>
    </button>

    <p class="form__text">
      <a id="" href="./" class="form__assistance"
        >Contact for Assistance</a
      >
    </p>
  </form>
</div>
</div>